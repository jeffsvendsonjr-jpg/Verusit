{
  "manifest_version": 3,
  "name": "VerusIT",
  "version": "1.1.0",
  "description": "The final word in search result verification. Identify age and tech stack instantly.",
  "host_permissions": [
    "*://www.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search*"],
      "css": ["hover.css"],
      "js": ["hover.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
